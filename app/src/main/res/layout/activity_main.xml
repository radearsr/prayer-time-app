<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Judul -->
    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Jadwal Sholat"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/iv_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_location"
        app:layout_constraintBottom_toBottomOf="@id/location"
        app:layout_constraintEnd_toStartOf="@id/location"
        app:layout_constraintTop_toTopOf="@id/location" />

    <!-- Lokasi -->
    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Jakarta, Indonesia"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <!-- Tanggal Masehi -->
    <TextView
        android:id="@+id/gregorianDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Senin, 01 Juli 2025"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/location" />

    <!-- Tanggal Hijriah -->
    <TextView
        android:id="@+id/hijriDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25 Dzulqa'dah 1446 H"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gregorianDate" />

    <!-- Waktu Saat Ini -->

    <ImageView
        android:id="@+id/iv_live_time"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/sharp_access_time_24"
        app:layout_constraintBottom_toBottomOf="@id/currentTime"
        app:layout_constraintEnd_toStartOf="@id/currentTime"
        app:layout_constraintTop_toTopOf="@id/currentTime" />

    <TextView
        android:id="@+id/currentTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="monospace"
        android:text="15:30:12"
        android:textAlignment="center"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hijriDate" />

    <!-- Grid Waktu Sholat (gunakan RecyclerView di implementasi nyata) -->
    <LinearLayout
        android:id="@+id/prayerGrid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/currentTime">

        <!-- Misal satu item jadwal sholat -->
        <!-- Satu komponen prayer_card -->
        <include
            android:id="@+id/card_dzuhur"
            layout="@layout/prayer_card" />

        <!-- Tambahkan include lain untuk setiap waktu sholat -->
        <include
            android:id="@+id/card_ashar"
            layout="@layout/prayer_card" />

        <!-- Tambahkan include lain untuk setiap waktu sholat -->
        <include
            android:id="@+id/card_ashar"
            layout="@layout/prayer_card" />

        <!-- Tambahkan include lain untuk setiap waktu sholat -->
        <include
            android:id="@+id/card_ashar"
            layout="@layout/prayer_card" />

        <!-- Tambahkan include lain untuk setiap waktu sholat -->
        <include
            android:id="@+id/card_ashar"
            layout="@layout/prayer_card" />

        <include
            android:id="@+id/card_ashar"
            layout="@layout/prayer_card" />

        <!-- Tambahkan card lainnya dengan cara serupa -->
    </LinearLayout>

    <!-- Info sholat berikutnya -->
    <TextView
        android:id="@+id/nextPrayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Ashar dalam 2 jam 15 menit"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/prayerGrid" />

    <!-- Kutipan Quran -->
    <TextView
        android:id="@+id/quranQuote"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="â€œDan dirikanlah shalat...â€ - Al-Baqarah: 43"
        android:textSize="14sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nextPrayer" />

    <!-- Tombol Tema -->
    <Button
        android:id="@+id/themeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="ðŸŒ™ Mode Malam (Auto)"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>